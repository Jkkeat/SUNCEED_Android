<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_android_admin"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/Title_android_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_android_admin"
            android:textSize="18sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/Descrption_android_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title_android_admin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_android_admin"

            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/Price_android_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Descrption_android_admin"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_android_admin"

            android:textSize="12sp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/Post_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Price_android_admin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>